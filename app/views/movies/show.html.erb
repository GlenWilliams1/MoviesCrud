<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @movie.title %></h5>
    <p class="card-text"><strong>Release date:</strong> <%= @movie.release_date %></p>
    <p class="card-text"><strong>Genre:</strong> <%= @movie.genre %></p>
  </div>
</div>


<div class="mt-3">
  <%= link_to "Edit this movie", edit_movie_path(@movie), class: "btn btn-warning" %> |
  <%= link_to "Back to movies", movies_path, class: "btn btn-secondary" %>

  <%= button_to "Destroy this movie", @movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
